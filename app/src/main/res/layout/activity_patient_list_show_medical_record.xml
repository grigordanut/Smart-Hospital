<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgrandier"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientListShowMedicalRecord"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvPatListShowMedRecDocName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:text="@string/tv_patListShowRecDocName"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold|italic"/>

    <TextView
        android:id="@+id/tvPatListShowMedRecPatName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        android:text="@string/tv_patListPatientName"
        android:textSize="22sp"
        android:textColor="#000000"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/patListShowMedRecRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>

</LinearLayout>